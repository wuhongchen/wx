{template 'common/header-gw'}
<ol class="breadcrumb">
	<li><a href="./?refresh"><i class="fa fa-home"></i></a></li>
	<li><a href="{url 'system/welcome'}">权限组管理</a></li>
	{if $do == 'display'}<li class="active">权限组列表</li>{/if}
	{if $do == 'post'}<li class="active">{if $id}编辑{else}添加{/if}权限组</li>{/if}
	
</ol>
<ul class="nav nav-tabs">
	<li {if $do == 'post'}class="active"{/if}><a href="{php echo url('account/groups/post');}">{if $id}编辑{else}添加{/if}权限组</a></li>
	<li {if $do == 'display'}class="active"{/if}><a href="{php echo url('account/groups/display');}">权限组列表</a></li>
</ul>
{if $do == 'post'}
<form class="form-horizontal form" action="" method="post" enctype="multipart/form-data">
<div class="clearfix">
	<input type="hidden" name="id" value="{$id}" />
	<input type="hidden" name="templateid" value="{$template['id']}">
	
	<table style="width:100%;">
		<tr>
			<td colspan="2"><h5 class="page-header">权限组管理</h5></td>
		</tr>
		<tr>
			<td style="width:100px"><label for="" class="form-label">权限组名称</label></td>
			<td>
				<input type="text" class="form-control" name="name" id="name" value="{$item['name']}" />
			</td>
		</tr>
		<tr style="height:20px"><td></td><td></td></tr>
		<tr>
			<td colspan="2">
					<h5 class="page-header">设置当前用户允许访问的模块</h5>
						<table class="table">
							<thead>
								<tr>
									<th class="row-first">选择</th>
									<th>模块名称</th>
									<th>模块标识</th>
									<th>功能简介</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{loop $modules $module}
								<tr>
									<td class="row-first">{if !$module['issystem']}<input class="modules" type="checkbox" value="{$module['name']}" name="modules[]" {if !empty($item['modules']) && in_array($module['name'], $item['modules'])}checked{/if} />{else}<input class="modules" type="checkbox" value="{$module['name']}" name="modules[]" disabled checked />{/if}</td>
									<td>{$module['title']}</td>
									<td>{$module['name']}</td>
									<td>{$module['ability']}</td>
									<td>{if $module['issystem']}<span class="label label-success">系统模块</span>{/if}</td>
								</tr>
								{/loop}
							</tbody>
						</table>
			</td>
		</tr>
		<tr>
			<td colspan="2">
					<h5 class="page-header">设置当前用户允许访问的模板</h5>
						<table class="table">
							<thead>
								<tr>
									<th>选择</th>
									<th>模板名称</th>
									<th>模板标识</th>
									<th>功能简介</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{loop $templates $temp}
								<tr>
									<td class="row-first">{if $temp['name'] != 'default'}<input class="modules" type="checkbox" value="{$temp['id']}" name="templates[]" {if !empty($item['templates']) && in_array($temp['id'], $item['templates'])}checked{/if} />{else}<input class="modules" type="checkbox" value="{$temp['id']}" name="templates[]" disabled checked />{/if}</td>
									<td>{$temp['title']}</td>
									<td>{$temp['name']}</td>
									<td>{$temp['description']}</td>
									<td></td>
								</tr>
								{/loop}
							</tbody>
						</table>
			</td>
		</tr>
		<tr>
			<th></th>
			<td>
				<input name="token" type="hidden" value="{$_W['token']}" />
				<input type="submit" class="btn btn-primary" name="submit" value="提交" />
			</td>
		</tr>
	</table>
</div>
</form>
{elseif $do == 'display'}
<form action="" method="post">
<div class="main">
	<div style="padding:15px;">
		<table class="table table-hover">
			<thead class="navbar-inner">
				<tr>
					<th style="width:30px;">删？</th>
					<th style="width:150px;">名称</th>
					<th style="min-width:60px;">操作</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><input type="checkbox" disabled value="{$item['id']}" /></td>
					<td>基础权限组 </td>
					<td><span class="label label-info">系统</span></td>
				</tr>
				<tr>
					<td><input type="checkbox" disabled value="{$item['id']}" /></td>
					<td>完全权限组 </td>
					<td><span class="label label-info">系统</span></td>
				</tr>
				{loop $list $item}
				<tr>
					<td><input type="checkbox" name="delete[]" value="{$item['id']}" /></td>
					<td>{$item['name']}</td>
					<td><span><a href="{php echo url('account/groups/post', array('id' => $item['id']))}">编辑</a></span></td>
				</tr>
				{/loop}
			</tbody>
			<tr>
				<th></th>
				<td>
					<input name="token" type="hidden" value="{$_W['token']}" />
					<input type="submit" class="btn btn-primary" name="submit" value="提交" />
				</td>
			</tr>
		</table>
	</div>
</div>
</form>
{/if}
{template 'common/footer-gw'}